<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-GLhlTQ8iRABdZLl6O3oVMWSktQOp6b7In1Zl3/Jr59b6EGGoI1aFkw7cmDA6j6gD" crossorigin="anonymous">
    <title>Document</title>
</head>
<body>
  <section class="vh-100" style="background-color: #eee;">
    <div class="container py-5 h-100">
      <div class="row d-flex justify-content-center h-100">
        <div class="col-md-12 col-xl-4">
          <div class="card" style="border-radius: 15px;">
            <div class="card-body text-center">
              <div class="mt-3 mb-4">
                <img src=<%=picture%> class="rounded-circle img-fluid" style="width: 100px;" />
              </div>
              <h4 class="mb-2">@<%=username%></h4>
              <p class="text-muted mb-4">prokopton 
              <p class="mb-2 h5"><%=articleCount%></p>
              <p class="text-muted mb-0">Articles</p></p>
              <div class="mt-4">
              </div>
            </div>
          </div>
          <% if (articleCount > 0) {%>
            <h3 class="mt-5 ps-2"><i><%=username%>'s</i> Articles:</h3>
          <% } %>
          <% articles.forEach(article => { %>
            <div class="card mt-4 p-4">
                <div class="class-body">
                    <h4 class="card-title"><%= article.title %></h4>
                    <div class="card-subtitle text-muted mb-2">
                        <%= article.createdAt.toLocaleDateString() %> 
                    </div>
                    <div class="card-text mb-2"><%= article.description %></div>
                      <a href="articles/<%= article.slug %>" class="btn btn-primary">Read More</a>
                      <% if (isCurrentUser) { %>
                        <a href="articles/edit/<%= article.id %>" class="btn btn-info">Edit</a>
                        <form action="/articles/<%= article.id %>?_method=DELETE" method="POST" class="d-inline">
                            <button type="submit" class="btn btn-danger">Delete</button>
                        </form>
                      <% } %>
                </div>
            </div>
        <% }) %>
          <a href="/logout" class="fixed-bottom btn btn-warning">Log Out</a>
        </div>
      </div>
    </div>
  </section>
</body>
</html>